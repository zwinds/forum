                "navigationBarTitleText": "标签管理",
                "enablePullDownRefresh": false
            }
        },
        {
            "path": "pages/userInfo/login/login",
            "style": {
                "navigationBarTitleText": "用户登录",
                "enablePullDownRefresh": false
            },
            "name": "login"
        },
		{
		    "path": "pages/registerUser/registerUser",
		    "style": {
		        "navigationBarTitleText": "用户注册",
		        "enablePullDownRefresh": false
		    },
		    "name": "register"
